ohos_copy("copy_napi_modules_shared_library") {
  deps = []
  sources = []
  foreach(module, common_napi_libs) {
    out_path = get_label_info("$ace_root/interfaces/napi/kits:${module}",
                              "root_out_dir")
    deps += [ "$ace_root/interfaces/napi/kits:${module}" ]
    if (use_mac) {
      sources += [ "${out_path}/arkui/ace_engine_standard/lib${module}.dylib" ]
    } else {
      sources += [ "${out_path}/arkui/ace_engine_standard/lib${module}.dll" ]
    }
  }

  if (use_mac) {
    outputs = [ root_build_dir +
                "/clang_x64/common/common/module/{{source_file_part}}" ]
  } else {
    outputs = [ root_build_dir +
                "/mingw_x86_64/common/common/module/{{source_file_part}}" ]
  }
}

ohos_copy("copy_curl_shared_library") {
  if (use_mac) {
    shared_library_path =
        get_label_info("//third_party/curl:curl_shared", "root_out_dir") +
        "/thirdparty/curl/libcurl_shared.dylib"
  } else {
    shared_library_path =
        get_label_info("//third_party/curl:curl_shared", "root_out_dir") +
        "/thirdparty/curl/libcurl_shared.dll"
  }
  deps = [ "//third_party/curl:curl_shared" ]
  sources = [ shared_library_path ]
  outputs =
      [ root_build_dir + "/mingw_x86_64/common/common/{{source_file_part}}" ]
}

ohos_copy("copy_resource_dynamic_library") {
  if (use_mac) {
    if (is_standard_system) {
      resource_manager_library = get_label_info(
                                     "//base/global/resource_management/frameworks/resmgr:global_resmgr_mac",
                                     "root_out_dir") + "/global/resource_management/libglobal_resmgr_mac.dylib"
      deps = [ "//base/global/resource_management/frameworks/resmgr:global_resmgr_mac(${current_toolchain})" ]
      sources = [ resource_manager_library ]
    } else {
      sources = [
        "//prebuilts/ace-toolkit/preview/rich/lib/mac/tv/libhmicuuc.dylib",
        "//prebuilts/ace-toolkit/preview/rich/lib/mac/tv/libresourcemanager_mac.dylib",
      ]
    }
    outputs =
        [ root_build_dir + "/clang_x64/common/common/{{source_file_part}}" ]
  } else {
    if (is_standard_system) {
      resource_manager_library = get_label_info(
                                     "//base/global/resource_management/frameworks/resmgr:global_resmgr_win",
                                     "root_out_dir") + "/global/resource_management/libglobal_resmgr_win.dll"
      deps = [ "//base/global/resource_management/frameworks/resmgr:global_resmgr_win(${current_toolchain})" ]
      sources = [ resource_manager_library ]
    } else {
      sources = [
        "//prebuilts/ace-toolkit/preview/rich/lib/windows/tv/libhmicuuc.dll",
        "//prebuilts/ace-toolkit/preview/rich/lib/windows/tv/libresourcemanager_win.dll",
      ]
    }
    outputs =
        [ root_build_dir + "/mingw_x86_64/common/common/{{source_file_part}}" ]
  }
}
