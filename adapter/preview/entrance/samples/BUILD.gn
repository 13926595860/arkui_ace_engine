  ohos_copy("copy_napi_shared_library") {
    shared_library_path =
        get_label_info("$ace_napi:ace_napi(${current_toolchain})",
                       "root_out_dir")
    deps = [
      "$ace_napi:ace_napi(${current_toolchain})",
