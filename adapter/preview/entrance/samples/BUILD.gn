import("//build/ohos.gni")
import("//foundation/arkui/ace_engine/ace_config.gni")
import(
    "//foundation/arkui/ace_engine/adapter/preview/build/config_js_engine.gni")
import("//foundation/arkui/ace_engine/interfaces/napi/kits/napi_lib.gni")

config("ace_pc_preview_config") {
  cflags_cc = [
    "-std=c++17",
    "-Wno-c99-designator",
    "-Wno-unknown-warning-option",
    "-Wno-thread-safety-attributes",
  ]

  include_dirs = [
    "$ace_root",
    "$ace_root/frameworks",
    "$flutter_root/engine",
    "$flutter_root/engine/flutter/shell/platform/common/cpp/public",
    "$flutter_root/engine/ace_adapter/flutter/shell/platform/glfw/public",
    "$flutter_root/skia",
    "$flutter_root/glfw/include",
  ]
}

template("ace_test") {
  forward_variables_from(invoker, "*")
  ohos_executable(target_name) {
    defines += invoker.defines
    defines += [ "USE_GLFW_WINDOW" ]
    configs = [ ":ace_pc_preview_config" ]

    sources = [
      "ace_${device}_test.cpp",
      "key_input_handler.cpp",
      "touch_event_handler.cpp",
    ]
    deps = [
      ":copy_curl_shared_library(${current_toolchain})",
      ":copy_napi_modules_shared_library(${current_toolchain})",
      ":copy_resource_dynamic_library(${current_toolchain})",
      "$ace_napi:ace_napi(${current_toolchain})",
      "$ace_root/adapter/preview/build:libace_engine_$platform(${current_toolchain})",
    ]
    if (enable_ark_preview) {
      deps += [
        ":copy_ark_shared_library(${current_toolchain})",
        ":copy_icu_data_resource(${current_toolchain})",
        ":copy_icu_shared_library(${current_toolchain})",
        ":copy_napi_shared_library(${current_toolchain})",
      ]
    } else {
      deps += [ ":copy_napi_shared_library(${current_toolchain})" ]
    }
    if (platform == "windows") {
      libs = [ "pthread" ]
    }
  }
}

ace_devices = [
  "phone",
  "tv",
  "wearable",
  "tablet",
  "card",
  "car",
]

foreach(item, ace_platforms) {
  platform = item.name
  platform_defines = []
  config = {
  }

  if (defined(item.config)) {
    config = item.config
  }
  if (defined(config.defines)) {
    platform_defines = config.defines
  }

  if (platform == "windows" || platform == "mac") {
    foreach(device, ace_devices) {
      ace_test("ace_test_${platform}_$device") {
        defines = platform_defines
        platform = platform
        device = device
      }
    }
  }
}

