import("//build/test.gni")
import("//foundation/arkui/ace_engine/test/unittest/ace_unittest.gni")

module_output_path = "ace_engine/backenduicomponent/vibrator"

ohos_unittest("VibratorTest") {
  module_out_path = module_output_path

  sources = [
    #test main
    "vibrator_test.cpp",

    #test object
    "$ace_root/frameworks/core/common/vibrator/vibrator_proxy.cpp",

    #mock
    "$ace_root/test/mock/core/common/mock_container.cpp",
  ]

  configs = [ "$ace_root/test/unittest:ace_unittest_config" ]

  deps = [
    "$ace_root/adapter/ohos/osal:ace_osal_ohos",
    "$ace_root/frameworks/base:ace_base_ohos",
    "//third_party/googletest:gmock_main",
    "//third_party/googletest:gtest_main",
  ]
}

group("unittest") {
  testonly = true
  deps = [ ":VibratorTest" ]
}
